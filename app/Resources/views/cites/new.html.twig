{% endblock %}

{% block body %}
    {{ form_start(form) }}

    {{ form_errors(form) }}
    <section id="new-cite">
        <div class="container-fluid myTab" >
            <div class="row justify-content-md-center">
                <div class="col-9" style="background-color: #eeeeee">
                    <div class="row referencia-container p-5">
                        <div class="col-md-12 ">
                            <form>
                                <h1>Cites creation</h1>
                                <h3>{{ cite.references.title }}</h3>

                                <div class="form-group mb-4 mt-4">
                                    {{ form_errors(form.type) }}
                                    {{ form_widget(form.type, { 'attr': { 'class': "form-control", 'id': "type"} } ) }}
                                </div>
                                <div class="form-group">
                                    <label for="cite">{{ form_label(form.cite) }}</label>
                                    {{ form_errors(form.cite) }}
                                    {{ form_widget(form.cite, { 'attr': { 'class': "form-control", 'placeholder': "Cite" , 'id': "cite", 'rows': 8 , 'autocomplete':"off" } } ) }}
                                </div>

                                <div class="form-group">
                                    <label for="doi">{{ form_label(form.doi) }}</label>
                                    {{ form_errors(form.doi) }}
                                    {{ form_widget(form.doi, { 'attr': { 'class': "form-control", 'placeholder': "DOI" , 'id': "doi", 'autocomplete':"off"  } } ) }}
                                </div>

                                <div class="form-group">
                                    <label for="url">{{ form_label(form.url) }}</label>
                                    {{ form_errors(form.url) }}
                                    {{ form_widget(form.url, { 'attr': { 'class': "form-control", 'placeholder': "Url" , 'id': "url", 'autocomplete':"off"  } } ) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form) }}
                                    <button type="submit" class="btn btn-primary">Save <i class="fas fa-save fa-x3"></i></button>
                                    <a href="javascript:history.back(-1);" title="Ir la pÃ¡gina anterior" class="btn btn-danger">Cancel <i class="fas fa-times fa-x3"></i></a>
                                    {{ form_end(form) }}
                                </div>
