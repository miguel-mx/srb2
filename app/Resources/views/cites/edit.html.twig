{% block body %}


    {{ form_errors(edit_form) }}
    {{ form_start(edit_form) }}

    <section id="edit-cite">
        <div class="container-fluid myTab">
            <div class="row justify-content-md-center">
                <div class="col-9" style="background-color: #eeeeee">
                    <div class="row referencia-container p-5">
                        <div class="col-md-12">
                            <form>
                                <h1>Cite edit</h1>
                                <h3>{{ cite.references.title }}</h3>

                                <div class="form-group mb-5">
                                    {{ form_errors(edit_form.type) }}
                                    {{ form_widget(edit_form.type, { 'attr': { 'class': "form-control", 'id': "type" } } ) }}
                                </div>

                                <div class="form-group">
                                    <label for="reference">{{ form_label(edit_form.cite) }}</label>
                                    {{ form_errors(edit_form.cite) }}
                                    {{ form_widget(edit_form.cite, { 'attr': { 'class': "form-control", 'placeholder': "Reference" , 'id': "reference", 'rows': 8, 'autocomplete':"off"  } } ) }}
                                </div>
                                <div class="form-group">
                                    <label for="doi">{{ form_label(edit_form.doi) }}</label>
                                    {{ form_errors(edit_form.doi) }}
                                    {{ form_widget(edit_form.doi, { 'attr': { 'class': "form-control", 'placeholder': "DOI" , 'id': "doi", 'autocomplete':"off"  } } ) }}
                                </div>

                                <div class="form-group">
                                    <label for="url">{{ form_label(edit_form.url) }}</label>
                                    {{ form_errors(edit_form.url) }}
                                    {{ form_widget(edit_form.url, { 'attr': { 'class': "form-control", 'placeholder': "Url" , 'id': "url", 'autocomplete':"off"  } } ) }}
                                </div>

                                <div>
                                    {{ form_widget(edit_form) }}

                                    <button type="submit" class="btn btn-primary">Save <i class="fas fa-save fa-x3"></i>
                                    </button>
                                    <a href="javascript:history.back(-1);" title="Ir la pÃ¡gina anterior"
                                       class="btn btn-danger">Cancel <i class="fas fa-times fa-x3"></i></a>
                                    {{ form_end(edit_form) }}
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
