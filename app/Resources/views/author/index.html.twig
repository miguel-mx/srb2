{% extends 'base.html.twig' %}

{% block body %}
    <section id="table">
        <div class="container myTab">
            <table id="myTable" class="table">

                <div class="mb-4">
                    <h1>Authors   {% if is_granted('ROLE_ADMIN') %}<a
                                href="{{ path('author_new') }}"><i
                                    class="fas fa-plus-circle fa-x3"></i></a></h1> {% endif %}
                </div>
                <thead>
                <tr>
                    <th>{{ authors|length }} Results</th>
                </tr>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td class="p-3 m-2">
                            <h5>
                                <strong><a href="{{ path('author_show', { 'slug': author.slug }) }}">{{ author.name }}</a></strong>
                            </h5>

                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('author_new') }}">New author</a>
            {% endif %}
        </div>
    </section>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "lengthMenu": [[10, 15, 20], [10, 15, 20]]
                }
            );

        });
    </script>
{% endblock %}

