{% extends 'base.html.twig' %}

 {% block stylesheets %}
     {{ parent() }}
     <link rel="stylesheet" href="{{ asset('css/forms.css') }}"/>
 {% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="formulario  ">
        <section class=" d-flex content-header justify-content-center ">
            <h1>Nueva referencia</h1>
        </section>
        <div class="container">
            <div class="alert-danger">{{ form_errors(form) }}</div>
            <div class=" row d-flex flex-column ">
                <div class=" justify-content-center mt-lg-5 col">
                    <h3>Datos de Publicación</h3>
                </div>

                <div class ="row d-flex justify-content-between col mt-lg-1 " >
                    <div class="form-group form-control-lg col-lg-10 col-xs-12 ">
                        <label>Tipo de Publicación</label>
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-dange">{{ form_errors(form.type) }}</span>
                    </div>
                    <div class="form-group form-control-lg col-lg-6 col-xs-12 ">

                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}






    <ul>
        <li>
            <a href="{{ path('referencia_index') }}">Back to the list</a>
        </li>
    </ul>




{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        var $tipo = $('#appbundle_referencia_type');
        $tipo.change(function() {
            // ... retrieve the corresponding form.
            var $form = $(this).closest('form');
            $form.submit();
        });
    </script>

{% endblock %}