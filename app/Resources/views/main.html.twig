{% extends 'base.html.twig' %}

{% block body %}

    <section id="buscador">
        <div class="container-fluid   mt-3 mb-5  ">
            <div class="row  justify-content-md-center ">
                <div class="hero-text mt-lg-5 col-lg-8 col-md-9 ">
                    <h1>Unidad de Documentación</h1>
                    <h2>Sistema de Referencias Bibliográficas</h2>
                </div>
            </div>

            <div class="row">
                <form class=" col mt-5 input-group input-group-lg mt-lg-5 col-lg-7 col-md-10 offset-md-2"
                      action="../index" method="get">
                    <input type="search" required class="form-control search" name="q" placeholder="Búsqueda"
                           autocomplete="off" aria-label="search">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit" value="Search" aria-label="search">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="page-section" style="background-color: #004e68; padding: 90px">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">Sistema de Referencias Bibliográficas</h2>
                    <hr class="divider light my-4">
                    <h5 class="text-white-50 mb-4">El Sistema de Referencias Bibliográficas es un repositorio
                        bibliográfico
                        que concentra la productividad científica e intelectual de cada uno de los académicos del Centro
                        de
                        Ciencias Matemáticas.</h5>
                </div>
            </div>
        </div>

    </section>


    <section id="stats">
        <div class="container-fluid  cards1">
            <div class="row justify-content-center content-cards ">
                <div class="col-lg-3 col-md-4 mt-lg-5 mb-lg-4 mt-3 justify-content-around anim">
                    <a href="https://localhost:8000/referencia/" class="card border-0 shadow-lg">
                        <div class="d-flex justify-content-between mb-lg-3">
                            <div class="class= d-inline-flex p-2 bd-highlight flex-column justify-content-end">


                                <div>
                                    <h2>{{ articlesTotal | length }}</h2>
                                </div>

                                <div>
                                    <h5>Articulos</h5>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mr-5 ">
                                <div>
                                    <i class="fas fa-newspaper fa-5x"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-3 col-md-4 mt-lg-5 mb-lg-4 mt-3 anim">
                    <a href="http://localhost:8000/author/" class="card border-0 shadow-lg ">
                        <div class="d-flex justify-content-between mb-lg-3 ">
                            <div class="class= d-inline-flex p-2 bd-highlight flex-column justify-content-end">
                                <div>
                                    <h2>{{ authorTotal | length }}</h2>
                                </div>
                                <div>
                                    <h5>Autores</h5>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mr-5 ">
                                <div>
                                    <i class="fas fa-user-tie fa-5x"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 mt-lg-5 mt-3 anim">
                    <a href="https://localhost:8000/searchAv?title=&type=thesis&authors=&yearpub="
                       class="card border-0 shadow-lg">
                        <div class="d-flex justify-content-between mb-lg-3 ">
                            <div class="class= d-inline-flex p-2 bd-highlight flex-column justify-content-end">
                                <div>
                                    <h2>{{ thesisTotal | length }}</h2>
                                </div>
                                <div>
                                    <h5>Tesis</h5>
                                </div>
                            </div>

                            <div class="d-flex align-items-center  ">
                                <div>
                                    <i class="fas fa-book fa-5x"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="latest-articles">
        <div class="container-fluid ">
            <h1 class="text-center"> Artículos Recientes</h1>

            <div class="row articles-container justify-content-center">
                <div class="col-lg-9">
                    {% for referencia in referencias %}
                        <div class="article ">
                            <div class="title"><a
                                        href="{{ path('referencia_show', { 'slug': referencia.slug }) }}">{{ referencia.title }}</a>
                            </div>
                            <div class="data"> {% if  referencia.journal %} {{ referencia.journal }},{% endif %}
                                {% if  referencia.volume %} Vol. {{ referencia.volume }},{% endif %}
                                {% if  referencia.issue %} Issue  {{ referencia.issue }},{% endif %}
                                {% if  referencia.yearPub %} {{ referencia.yearPub }},{% endif %}
                                {% if  referencia.pages %} p. {{ referencia.pages }}{% endif %}
                            </div>
                            <div class="author">{{ referencia.authors }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}